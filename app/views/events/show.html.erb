<h4><%= @event.name %></h4>
<% if @event.rsvp %>
<p>Please <a href="#">RSVP</a>.</p>
<% else %>
<p>No RSVP Required.</p>
<% end %>
<p><%= @event.date.strftime("%B %d, %Y") %> - <%= @event.time.strftime("%l:%M %P") %></p>
<p><%= @event.location %></p>
<p><%= @event.notes %></p>
<%= link_to 'Edit Event', edit_invitation_event_path %>